			private function init():void {
				wf.addEventListener( DragEvent.DRAG_ENTER, wf_dragEnterHandler );
				wf.addEventListener( DragEvent.DRAG_DROP, wf_dragDropHandler );
			}
			
			private function wf_dragEnterHandler(event:DragEvent):void
			{
				trace("drag enter");	
				var data:Array = event.dragSource.dataForFormat("Process") as Array;
				if (data && data.length > 0)
					DragManager.acceptDragDrop(wf);
				//DragManager.showFeedback( DragManager.COPY );
			}
			
			private function wf_dragDropHandler(event:DragEvent):void
			{
				trace("drag drop");
				var data:Array = event.dragSource.dataForFormat("Process") as Array;
				trace(data[0].Process);
				//input.text = data[0].name;
			}
			
		]]>
	</fx:Script>
