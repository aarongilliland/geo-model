<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%"
		 dragDrop="wf_dragEnterHandler(event)" 
		 dragEnter="wf_dragEnterHandler(event)">
	<fx:Script>
		<![CDATA[
			import mx.controls.Alert;
			import mx.events.DragEvent;
			public var id = null;
			
			protected function wf_dragEnterHandler(event:DragEvent):void
			{
				// TODO Auto-generated method stub
				Alert.show("drag drop");
			}
			
			protected function wf_dragEnterHandler(event:DragEvent):void
			{
				// TODO Auto-generated method stub
				Alert.show("drag enter");
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<!--<s:Panel width="100%" height="100%" dragDrop="wf_dragEnterHandler(event)"/>-->
	
	<mx:Canvas id="wf" width="100%" height="100%"
			   />
</s:VGroup>
